@model IEnumerable<frushgah.Models.detail>
@{ ViewData["Title"] = "Index";
    Layout = "_LayoutMain";
}
<style>
    .card {
        box-shadow: 4px 8px 8px 4px rgba(0,0,0,0.8);
        transition: 0.3s;
        width: 90%;
        align-items: center;
        text-align: center;
        background-color: transparent;
        background-image: linear-gradient(black,transparent);
    }

        .card:hover {
            box-shadow: 16px 16px 16px 16px rgba(0,0,0,0.8);
            background-image: linear-gradient(45deg,black,transparent);
        }

    .container {
        padding: 2px 16px;
    }

    .btn {
        box-shadow: 4px 8px 8px 4px rgba(0,0,0,0.8);
    }
</style>
<h1>گروه اصلی</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="container">
                @if (item.pic1 != null)
                {
                    <div class="mySlides">

                        <div class="numbertext">1 / 3</div>
                        @{
                            string imageBase64 = Convert.ToBase64String(item.pic1); string
                        imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                            <img src="@imageSrc" style="width:100%">
                        }
                    </div>
                }
                @if (item.pic2 != null)
                {
                    <div class="mySlides">

                        <div class="numbertext">2 / 3</div>
                        @{
                            string imageBase64 = Convert.ToBase64String(item.pic2); string
                        imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                            <img src="@imageSrc" style="width:100%">
                        }
                    </div>
                }
                @if (item.pic3 != null)
                {
                    <div class="mySlides">

                        <div class="numbertext">3 / 3</div>
                        @{
                            string imageBase64 = Convert.ToBase64String(item.pic3); string
                        imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                            <img src="@imageSrc" style="width:100%">
                        }
                    </div>
                }

                <a class="prev" onclick="plusSlides(-1)">❮</a>
                <a class="next" onclick="plusSlides(1)">❯</a>

                <div class="caption-container">
                    <p id="caption11">
                        @item.nameDetail
                    </p>
                </div>

                <div class="row">
                    @if (item.pic1 != null)
                    {
                        <div class="column">
                            @{
                                string imageBase64 = Convert.ToBase64String(item.pic1); string
                            imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                                <img class="demo cursor" src="@imageSrc" style="width:100%" onclick="currentSlide(1)">
                            }
                        </div>
                    }
                    @if (item.pic2 != null)
                    {
                        <div class="column">
                            @{
                                string imageBase64 = Convert.ToBase64String(item.pic2); string
                            imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                                <img class="demo cursor" src="@imageSrc" style="width:100%" onclick="currentSlide(2)">
                            }
                        </div>
                    }
                    @if (item.pic3 != null)
                    {
                        <div class="column">
                            @{
                                string imageBase64 = Convert.ToBase64String(item.pic3); string
                            imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                                <img class="demo cursor" src="@imageSrc" style="width:100%" onclick="currentSlide(3)">
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <textarea cols="12" rows="5">
                        @item.tozihat
                        </textarea>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}









