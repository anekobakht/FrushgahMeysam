@model frushgah.Models.group 
@{ ViewData["Title"] = "Delete";
Layout="_LayoutMain"; }

<h3 style="color: white">آیا مایل به حذف اطلاعات می باشید؟</h3>
<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.nameGroup)</dt>
    <dd class="col-sm-10" style="color: white">
      @Html.DisplayFor(model => model.nameGroup)
    </dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.picGroup)</dt>
    <dd class="col-sm-10">
       @if(Model.picGroup != null) {
           string imageBase64 =
         Convert.ToBase64String(Model.picGroup); string imageSrc =
         string.Format("data:image/gif;base64,{0}", imageBase64);
      <img src="@imageSrc" width="100" height="100" />
       }
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="idGroup" />
    <input type="submit" value="Delete" class="btn btn-warning btn-rounded" /> |
    <a class="btn btn-outline-warning btn-rounded" asp-action="Index">بازگشت به لیست</a>
  </form>
</div>
